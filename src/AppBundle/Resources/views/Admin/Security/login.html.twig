{% extends 'base_security.html.twig' %}
{% block content %}
    <h4>User login</h4>
    <br>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="">
        <form action="{{ path('admin_login_check') }}" method="post">
            <div class="form-group">
                <label for="username"><b>Your login</b></label>
                <input class="form-control" type="text" id="username" name="_username" value="{{ lastUsername }}" placeholder="Enter your login">
            </div>
            <div class="form-group">
                <label for="password"><b>Your password</b></label>
                <input class="form-control"  type="password" id="password" name="_password" placeholder="Enter your password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-large pull-right">Login</button>
            </div>
            {#
                If you want to control the URL the user
                is redirected to on success (more details below)
                <input type="hidden" name="_target_path" value="/account" />
            #}
            <div class="clearfix"></div>
        </form>
    </div>
{% endblock %}