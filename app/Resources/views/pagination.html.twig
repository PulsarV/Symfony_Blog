<!-- Pagination -->
{% if pagesCount > 0 %}
    <div class="pagination-wrapper ">
        <ul class="pagination pagination-sm">
            {% if page > 1 %}
                {% if slug is defined %}
                    <li><a href="{{ path(app.request.attributes.get('_route'), {'slug': slug, 'page': page - 1 }) }}">Previous</a></li>
                {% else %}
                    <li><a href="{{ path(app.request.attributes.get('_route'), {'page': page - 1 }) }}">Previous</a></li>
                {% endif %}

            {% else %}
                <li class="disabled"><a href="">Previous</a></li>
            {% endif %}

            {% for i in 1..pagesCount %}
                {% if i == page %}
                    <li class="active"><a href="">{{ i }}</a></li>
                {% else %}
                    {% if slug is defined %}
                        <li><a href="{{ path(app.request.attributes.get('_route'), {'slug': slug, 'page': i }) }}">{{ i }}</a></li>
                    {% else %}
                        <li><a href="{{ path(app.request.attributes.get('_route'), {'page': i }) }}">{{ i }}</a></li>
                    {% endif %}
                {% endif %}
            {% endfor %}
            {% if page < pagesCount %}
                {% if slug is defined %}
                    <li><a href="{{ path(app.request.attributes.get('_route'), {'slug': slug, 'page': page + 1 }) }}">Next</a></li>
                {% else %}
                    <li><a href="{{ path(app.request.attributes.get('_route'), {'page': page + 1 }) }}">Next</a></li>
                {% endif %}
            {% else %}
                <li class="disabled"><a href="">Next</a></li>
            {% endif %}
        </ul>
    </div>
{% endif %}